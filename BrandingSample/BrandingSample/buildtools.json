{
  "$schema": "https://mobilebuildtools.com/schemas/v2/buildtools.schema.json",
  "appConfig": {
    "strategy": "TransformOnly",
    "disable": false
  },
  "artifactCopy": {
    "disable": false
  },
  "automaticVersioning": {
    "behavior": "PreferBuildNumber",
    "environment": "All",
    "versionOffset": 0,
    "disable": false
  },
  "manifests": {
    "token": "$",
    "variablePrefix": "Manifest_",
    "missingTokensAsErrors": true,
    "disable": false
  },
  "releaseNotes": {
    "maxDays": 7,
    "maxCommit": 10,
    "characterLimit": 250,
    "filename": "ReleaseNotes.txt",
    "createInRoot": false,
    "disable": false
  },
  "projectSecrets": {
    "BrandingSample": {
      "className": "Settings",
      "namespace": "Helpers",
      "properties": [
        {
          "name": "AppDisplayName",
          "type": "String",
        },
		{
          "name": "Theme",
          "type": "String",
		  "default": "Light",
        },
      ]
    }
  },
  "environment": {
    "defaults": {
      "AppId": "com.example.branding",
    },
    "configuration": {
      "Debug": {
        "AppId": "com.example.brandingdev",
      }
    }
  },
  "debug": true
}